{
  "name": "AndroidVNC Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--cap-add=SYS_ADMIN",
    "--device=/dev/kvm"
  ],
  "postCreateCommand": "./.devcontainer/setup.sh",
  "portsAttributes": {
    "3000": {
      "label": "Backend Server",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Frontend Server"
    },
    "6901": {
      "label": "Android Emulator VNC"
    }
  }
}
